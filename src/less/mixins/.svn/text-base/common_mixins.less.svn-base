.imagetmpl(@url){
	max-width:image-width(@url)*0.5;
	max-height:image-height(@url)*0.5;
}

.cross(@color;@width;@size){
	@line:{
		&:extend(.dib);
		width:@width;
		height:@size;
		background-color: @color;
	};
	&:first-child,&:last-child{
		@line();
	}
	&:last-child{
		transform-origin:center center;
		-webkit-transform-origin:center center;
		transform:rotate(90deg);
		-webkit-transform:rotate(90deg);
	}
}
.row3(@th;@bh;){
	height:100%;
	position:relative;
	overflow:hidden;
	.top{
		height:@th;
		position:absolute;
		left:0;
		right:0;
	}
	.main{
		position:absolute;
		left:0;
		right:0;
		overflow:hidden;
		top:@th;
		bottom:@bh;
	}
	.bottom{
		height:@bh;
		position:absolute;
		left:0;
		right:0;
		bottom:0;
	}
}